rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User Collection Rules
    match /users/{userId} {
      // Allow creation if authenticated and UID matches
      allow create: if isOwner(userId);
      
      // Allow reading/updating/deleting only by owner
      allow read, update, delete: if isOwner(userId);
      
      // Subcollections (trades, strategies, etc.)
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Geofences Collection - SuperAdmin managed
    match /geofences/{geofenceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // SuperAdmin Audit Logs - Read/Write for authenticated
    match /superadmin_audit_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // SuperAdmin Settings
    match /superadmin_settings/{settingId} {
      allow read, write: if isAuthenticated();
    }
  }
}
